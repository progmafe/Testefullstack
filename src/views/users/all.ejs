    <script>
        function deleteUser(userIdParam) {

            const userId = userIdParam
            $.ajax({
                url:'/api/v1/users/user_id',
                method:'delete',
                data: { id: userId },
                success: () => {
                    window.location.href = "/api/v1/users";
                }
            })
        }
        function validaEmail(email) {
            var re = /\S+@\S+\.\S+/;
            return re.test(email);
        }
    </script>